<h3>Requested Cards</h3>
<table>
    <thead>
        <th>Card</th>
        <th>Requester</th>
        <th></th>
    </thead>
    <tbody>
        <% @requesters.each do |requester| %>
            <tr>
                <td><%= requester.card.title %></td>
                <td>
                    <% @user = User.find(requester.user_id) %>
                    <%= @user.name %>
                </td>
                <td>
                    <span class="label"><%= link_to "Accept", accept_request_path(request_id: requester.id) %></span>
                    <span class="label"><%= link_to "Reject", '#' %></span>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
