<div class="top-bar">
    <div class="top-bar-left">
        <li class="menu-text">
            <%= link_to "TODO-list App", root_path %>
        </li>
    </div>
    <div class="top-bar-right">
        <ul class=" dropdown menu" data-dropdown-menu>
            <li><%= link_to "HOME", root_path %></li>
            <% if logged_in? %>
                <li><%= link_to "YOUR LISTS", lists_path %></li>
                <li>
                    <%= link_to "REQUESTS", '#' %>
                    <ul class="menu vertical">
                        <li><%= link_to "YOUR REQUESTS", other_todos_path %></li>
                        <li><%= link_to "AWAITING YOUR RESPONSE", requested_cards_path %></li>                       
                    </ul>
                </li>

                <li><b><%= current_user.name %></b></li>
                <li><span class="alert label" id="logout"><%= link_to fa_icon('power-off', text: 'LOGOUT'), logout_path, method: :delete %></span></li>
            <% else %>
                <li><%= link_to "LOGIN", login_path %></li>
            <% end %>
        </ul>
    </div>
</div>

